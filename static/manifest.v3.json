{
	"manifest_version": 3,
	"permissions": ["storage", "proxy", "cookies"],
	"host_permissions": [
		"*://sage.party/*",
		"*://*.sage.party/*",
		"*://store.steampowered.com/*",
		"*://steamcommunity.com/*",
		"*://help.steampowered.com/*",
		"*://steam.tv/*",
		"*://checkout.steampowered.com/*"
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}
