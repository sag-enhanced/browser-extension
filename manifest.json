{
    "name": "SAGE",
    "description": "Assistance for helping sage.leodev.xyz interact with Steam and other services.",
    "version": "7",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "cookies",
        "*://recaptcha.net/recaptcha/enterprise/*",
        "*://sage.leodev.xyz/*",
        "*://store.steampowered.com/join/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{16c0aa8c-6170-4fa4-8c6a-3ac1a4194b22}"
        }
    },
    "icons": {
        "16": "icons/16x16.jpg",
        "48": "icons/48x48.jpg",
        "256": "icons/256x256.jpg"
    },
    "content_scripts": [
        {
            "matches": [
                "https://store.steampowered.com/join/"
            ],
            "js": [
                "inject_steam.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://recaptcha.net/recaptcha/enterprise/anchor*"
            ],
            "js": [
                "inject_recaptcha.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "https://sage.leodev.xyz/*"
            ],
            "js": [
                "inject_sage.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ]
}