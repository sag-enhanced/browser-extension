{
    "name": "SAG",
    "description": "CAPTCHA assistance for sage.leodev.xyz",
    "version": "1",
    "manifest_version": 2,
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://sage.leodev.xyz/*",
        "*://store.steampowered.com/join/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{16c0aa8c-6170-4fa4-8c6a-3ac1a4194b22}"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://store.steampowered.com/join/"
            ],
            "js": [
                "captcha.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "*://localhost/*",
                "https://sage.leodev.xyz/*"
            ],
            "js": [
                "rpcbridge.js"
            ],
            "all_frames": true
        }
    ]
}